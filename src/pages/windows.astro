---

<BaseLayout>
  <section>
    <FixedTabBar activeTab="window" />

    <div class="py-6 sm:py-8 md:py-12 max-w-3xl mx-auto px-4 sm:px-0">
      <div class="mb-8 sm:mb-12">
        <MainTabs activeTab="window" />

        <div class="grid grid-cols-3 gap-3 sm:gap-4 mt-8">
          {videos.map((video) => (
            <div class="group">
              <div class="relative bg-black rounded-lg overflow-hidden" style="aspect-ratio: 9/16;">
                <VideoPlayer 
                  videoUrl={video.videoUrl}
                  title={video.title}
                  authorName={video.authorName}
                  authorAvatar={video.authorAvatar}
                  client:load
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

