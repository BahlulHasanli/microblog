---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { isAuthenticated } from "@/utils/auth";
import { supabase } from "@/db/supabase";

// Check if user is already authenticated
if (isAuthenticated(Astro.cookies)) {
  return Astro.redirect('/');
}

// Check if registration is enabled
let enableRegistration = true;
try {
  const { data: registrationSetting } = await supabase
    .from("settings")
    .select("value")
    .eq("key", "enable_registration")
    .single();
  
  if (registrationSetting) {
    enableRegistration = registrationSetting.value === 'true' || registrationSetting.value === true;
  }
} catch (error) {
  console.error("Registration setting yüklənərkən xəta:", error);
}

// If registration is disabled, redirect to home
if (!enableRegistration) {
  return Astro.redirect('/');
}
---

<BaseLayout
  title="Qeydiyyat"
  description="The 99-da yeni hesab yaradın. Qeydiyyatdan keçin və pop-mədəniyyət, oyunlar, filmlərin dünyasına qoşulun."
>
    <section class="max-w-md mx-auto py-8 px-4 sm:px-0">
        <div class="bg-white rounded-lg p-4">
            <!-- Başlık -->
            <div class="text-center mb-6">
                <h1 class="text-xl md:text-3xl font-big-shoulders font-bold text-base-900 mb-1">
                    Qeydiyyat
                </h1>
                <p class="text-base-600 text-sm">
                    Yeni hesab yaradın və bizə qoşulun
                </p>
            </div>

            <!-- Form -->
            <form id="signupForm" class="space-y-5">
                <!-- Ad Soyad -->
                <div>
                    <label for="fullName" class="block text-xs font-medium text-base-700 mb-1">
                        Ad Soyad
                    </label>
                    <input
                        type="text"
                        id="fullName"
                        name="fullName"
                        placeholder="Ad və soyadınızı daxil edin"
                        required
                        class="w-full px-3 py-1.5 border border-base-200 rounded-lg focus:outline-none focus:ring-1 focus:ring-rose-500 focus:border-transparent text-sm text-base-900 placeholder-base-400"
                    />
                </div> 

                <!-- Email -->
                <div>
                    <label for="email" class="block text-xs font-medium text-base-700 mb-1">
                        Email
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="email@ethe99.az"
                        required
                        class="w-full px-3 py-1.5 border border-base-200 rounded-lg focus:outline-none focus:ring-1 focus:ring-rose-500 focus:border-transparent text-sm text-base-900 placeholder-base-400"
                    />
                </div>

                <!-- Şifrə -->
                <div>
                    <label for="password" class="block text-xs font-medium text-base-700 mb-1">
                        Şifrə
                    </label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Güclü bir şifrə seçin"
                        required
                        class="w-full px-3 py-1.5 border border-base-200 rounded-lg focus:outline-none focus:ring-1 focus:ring-rose-500 focus:border-transparent text-sm text-base-900 placeholder-base-400"
                    />
                    <p class="text-xs text-base-500 mt-0.5">
                        Minimum 8 karakter, böyük və kiçik hərf, rəqəm və xüsusi simvol
                    </p>
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    id="submitButton"
                    class="cursor-pointer w-full bg-rose-500 hover:bg-rose-600 text-white font-medium py-1.5 px-4 rounded-lg text-sm transition-colors focus:outline-none focus:ring-1 focus:ring-rose-500 disabled:opacity-70 disabled:cursor-not-allowed"
                >
                    Qeydiyyat
                </button>

                <!-- Error/Success Messages -->
                <div id="message" class="hidden p-2 rounded-lg text-xs font-medium"></div>
            </form>

            <!-- Divider -->
            <div class="relative my-5">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-base-200"></div>
                </div>
                <div class="relative flex justify-center text-xs">
                    <span class="bg-white px-2 text-base-500">və ya</span>
                </div>
            </div>

           <div class="grid grid-cols-2 gap-2 justify-between items-center">
             <!-- Google Sign Up Button -->
            <button
                type="button"
                id="googleSignupBtn"
                class="cursor-pointer w-full flex items-center justify-center gap-2 bg-white border border-base-200 hover:bg-base-50 text-base-700 font-medium py-1.5 px-4 rounded-lg text-sm transition-colors focus:outline-none focus:ring-1 focus:ring-base-300 disabled:opacity-70 disabled:cursor-not-allowed"
            >
                <svg class="w-4 h-4" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
            </button>

            <!-- Apple Sign Up Button -->
            <button
                type="button"
                id="appleSignupBtn"
                class="cursor-pointer w-full flex items-center justify-center gap-2 bg-black hover:bg-gray-800 text-white font-medium py-1.5 px-4 rounded-lg text-sm transition-colors focus:outline-none focus:ring-1 focus:ring-gray-500 disabled:opacity-70 disabled:cursor-not-allowed"
            >
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
                </svg>
            </button>
           </div>

            <!-- Login Link -->
            <div class="text-center mt-4 pt-3 border-t border-base-100">
                <p class="text-base-600 text-xs">
                    Artıq hesabınız var?
                    <a href="/signin" class="text-rose-500 hover:text-rose-600 font-medium transition-colors">
                        Daxil olun
                    </a>
                </p>
            </div>
        </div>
    </section>

    <script>
        import { createClient } from '@supabase/supabase-js';

        const supabaseClient = createClient(
            import.meta.env.PUBLIC_SUPABASE_URL,
            import.meta.env.PUBLIC_SUPABASE_KEY
        );

        document.getElementById('googleSignupBtn')?.addEventListener('click', async () => {
            const btn = document.getElementById('googleSignupBtn') as HTMLButtonElement;
            
            if (!btn) return;
            
            btn.disabled = true;
            
            try {
                const { data, error } = await supabaseClient.auth.signInWithOAuth({
                    provider: 'google',
                    options: {
                        redirectTo: `${window.location.origin}/auth/callback`,
                    },
                });

                if (error) {
                    alert(error.message || 'Google ilə qeydiyyat xətası');
                    btn.disabled = false;
                }
            } catch (error) {
                console.error('Google signup error:', error);
                alert('Şəbəkə xətası baş verdi');
                btn.disabled = false;
            }
        });

        document.getElementById('appleSignupBtn')?.addEventListener('click', async () => {
            const btn = document.getElementById('appleSignupBtn') as HTMLButtonElement;
            
            if (!btn) return;
            
            btn.disabled = true;
            
            try {
                const { data, error } = await supabaseClient.auth.signInWithOAuth({
                    provider: 'apple',
                    options: {
                        redirectTo: `${window.location.origin}/auth/callback`,
                    },
                });

                if (error) {
                    alert(error.message || 'Apple ilə qeydiyyat xətası');
                    btn.disabled = false;
                }
            } catch (error) {
                console.error('Apple signup error:', error);
                alert('Şəbəkə xətası baş verdi');
                btn.disabled = false;
            }
        });

        document.getElementById('signupForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const form = e.target as HTMLFormElement;
            const formData = new FormData(form);
            const messageDiv = document.getElementById('message');
             
            if (!messageDiv) return;
            
            // Hide previous messages
            messageDiv.classList.add('hidden');
            
            // Get form data
            const data = {
                email: formData.get('email') as string,
                fullName: formData.get('fullName') as string,
                password: formData.get('password') as string
            };
             
            try {
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    // Success
                    messageDiv.textContent = result.message || 'Qeydiyyat uğurla tamamlandı!';
                    messageDiv.className = 'block p-3 rounded-lg text-sm font-medium bg-green-100 text-green-800 border border-green-200';
                    form.reset();

                    setTimeout(() => {
                        window.location.href = '/';
                    }, 2000);
                } else {
                    // Error
                    messageDiv.textContent = result.message || 'Bir xəta baş verdi';
                    messageDiv.className = 'block p-3 rounded-lg text-sm font-medium bg-red-100 text-red-800 border border-red-200';
                }
            } catch (error) {
                messageDiv.textContent = 'Şəbəkə xətası baş verdi';
                messageDiv.className = 'block p-3 rounded-lg text-sm font-medium bg-red-100 text-red-800 border border-red-200';
            }
        });
    </script>
</BaseLayout>