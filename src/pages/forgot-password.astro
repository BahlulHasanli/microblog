---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ForgotPasswordView from "@/components/auth/ForgotPasswordView.svelte";
import { getLocaleFromCookie, useTranslations } from "@/utils/i18n";

export const prerender = false

const locale = getLocaleFromCookie(Astro.cookies);
const t = useTranslations(locale);
---

<BaseLayout
  title={t.pages.forgotPassword.title}
  description={t.pages.forgotPassword.description}
  locale={locale}
>
  <ForgotPasswordView client:load t={t} />
</BaseLayout>
