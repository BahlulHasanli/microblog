---
import BaseLayout from "../layouts/BaseLayout.astro";
import { isAuthenticated, getUserFromCookies } from "../utils/auth";

export const prerender = false;

// Sadece üyeler erişebilir, kimlik doğrulama kontrolü
const user = await getUserFromCookies(Astro.cookies);

// Kullanıcı giriş yapmamışsa, giriş sayfasına yönlendir
if (!isAuthenticated(Astro.cookies)) {
  return Astro.redirect("/signin?redirect=/create-post");
}

// Başarı ve hata mesajları için değişkenler
let success = false;
let error = "";
let slug = "";

// Form gönderildiğinde çalışacak kod
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    
    // API'ye gönder
    const response = await fetch(`${Astro.url.origin}/api/create-post`, {
      method: "POST",
      body: formData,
      headers: {
        "Cookie": Astro.request.headers.get("cookie") || ""
      }
    });
    
    const result = await response.json();
    
    if (result.success) {
      success = true;
      slug = result.slug;
    } else {
      error = result.message || "Gönderi oluşturulurken bir hata oluştu";
    }
  } catch (err) {
    console.error("Post oluşturma hatası:", err);
    error = "Gönderi oluşturulurken bir hata oluştu";
  }
}
---

<BaseLayout title="Yeni Gönderi Oluştur">
  <div class="max-w-2xl mx-auto px-4 py-10">
    <h1 class="text-3xl text-balance font-light font-display text-base-900 mb-6">Yeni <span class="font-semibold">Gönderi</span> Oluştur</h1>
    
    {success && (
      <div class="mb-6 p-3 bg-green-50 border border-green-200 text-green-700 rounded-md">
        <div class="flex items-center text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <p>Gönderi başarıyla oluşturuldu! <a href={`/posts/${slug}`} class="text-base-900 font-medium hover:underline">Görüntülemek için tıklayın</a></p>
        </div>
      </div>
    )}
    
    {error && (
      <div class="mb-6 p-3 bg-red-50 border border-red-200 text-red-700 rounded-md">
        <div class="flex items-center text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          <p>{error}</p>
        </div>
      </div>
    )}
    
    <form method="POST" class="space-y-5" enctype="multipart/form-data">
      <div>
        <label for="title" class="block text-sm font-medium text-base-700 mb-1.5">Başlık</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          class="w-full px-3 py-2 text-sm border border-base-200 rounded-md focus:ring-1 focus:ring-base-500 focus:border-base-500 text-base-900"
          placeholder="Gönderinizin başlığını girin"
        />
      </div>
      
      <div>
        <label for="description" class="block text-sm font-medium text-base-700 mb-1.5">Açıklama</label>
        <input
          type="text"
          id="description"
          name="description"
          required
          class="w-full px-3 py-2 text-sm border border-base-200 rounded-md focus:ring-1 focus:ring-base-500 focus:border-base-500 text-base-900"
          placeholder="Gönderinizin kısa bir açıklaması"
        />
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="image" class="block text-sm font-medium text-base-700 mb-1.5">Resim URL</label>
          <input
            type="url"
            id="image"
            name="image"
            placeholder="https://example.com/image.jpg"
            class="w-full px-3 py-2 text-sm border border-base-200 rounded-md focus:ring-1 focus:ring-base-500 focus:border-base-500 text-base-900"
          />
        </div>
      
        <div>
          <label for="imageAlt" class="block text-sm font-medium text-base-700 mb-1.5">Resim Alt Metni</label>
          <input
            type="text"
            id="imageAlt"
            name="imageAlt"
            class="w-full px-3 py-2 text-sm border border-base-200 rounded-md focus:ring-1 focus:ring-base-500 focus:border-base-500 text-base-900"
            placeholder="Resim için açıklayıcı metin"
          />
        </div>
      </div>
      
      <div>
        <label for="tags" class="block text-sm font-medium text-base-700 mb-1.5">Etiketler</label>
        <div class="relative">
          <input
            type="text"
            id="tags"
            name="tags"
            placeholder="Oyun, Film, Teknoloji"
            class="w-full px-3 py-2 text-sm border border-base-200 rounded-md focus:ring-1 focus:ring-base-500 focus:border-base-500 text-base-900"
          />
          <div class="mt-1 text-xs text-base-500">Etiketleri virgülle ayırın</div>
        </div>
      </div>
      
      <div>
        <div class="flex justify-between items-center mb-1.5">
          <label for="content" class="block text-sm font-medium text-base-700">İçerik</label>
          <span class="text-xs text-base-500">Markdown desteklenir</span>
        </div>
        <div class="relative">
          <textarea
            id="content"
            name="content"
            rows="12"
            required
            class="w-full px-3 py-2 border border-base-200 rounded-md focus:ring-1 focus:ring-base-500 focus:border-base-500 font-mono text-sm text-base-900"
            placeholder="# Başlık

## Alt Başlık

Paragraf içeriği buraya yazılır.

- Liste öğesi 1
- Liste öğesi 2

[Link](https://example.com)"
          ></textarea>
        </div>
      </div>
      
      <div class="pt-2 flex justify-end">
        <button
          type="submit"
          class="px-4 py-2 bg-base-900 text-white text-sm rounded-md hover:bg-base-800 focus:outline-none focus:ring-1 focus:ring-base-500 focus:ring-offset-1 font-medium transition-colors duration-200"
        >
          Gönderiyi Yayınla
        </button>
      </div>
    </form>
    
    <div class="mt-8 p-4 bg-base-50 border border-base-100 rounded-md">
      <details class="text-sm">
        <summary class="font-medium font-display text-base-900 cursor-pointer">Markdown İpuçları</summary>
        <div class="mt-3 grid grid-cols-2 gap-x-4 gap-y-2">
          <div class="flex items-center">
            <code class="bg-base-100 px-1.5 py-0.5 rounded text-xs text-base-900 font-mono"># Başlık</code> 
            <span class="ml-2 text-xs text-base-700">Başlık</span>
          </div>
          <div class="flex items-center">
            <code class="bg-base-100 px-1.5 py-0.5 rounded text-xs text-base-900 font-mono">**kalın**</code> 
            <span class="ml-2 text-xs text-base-700"><strong>kalın</strong></span>
          </div>
          <div class="flex items-center">
            <code class="bg-base-100 px-1.5 py-0.5 rounded text-xs text-base-900 font-mono">*italik*</code> 
            <span class="ml-2 text-xs text-base-700"><em>italik</em></span>
          </div>
          <div class="flex items-center">
            <code class="bg-base-100 px-1.5 py-0.5 rounded text-xs text-base-900 font-mono">[Link](url)</code> 
            <span class="ml-2 text-xs text-base-700">Bağlantı</span>
          </div>
          <div class="flex items-center">
            <code class="bg-base-100 px-1.5 py-0.5 rounded text-xs text-base-900 font-mono">- Liste</code> 
            <span class="ml-2 text-xs text-base-700">Liste</span>
          </div>
          <div class="flex items-center">
            <code class="bg-base-100 px-1.5 py-0.5 rounded text-xs text-base-900 font-mono">![Alt](url)</code> 
            <span class="ml-2 text-xs text-base-700">Resim</span>
          </div>
        </div>
      </details>
    </div>
  </div>
</BaseLayout>
