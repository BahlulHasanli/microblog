---
import ProfileDropdown from "./ProfileDropdown";

const { isLoggedIn, user } = Astro.props;

const isStudioRoutePath = Astro.url.pathname === '/studio';
---
<div
  x-data="{ open: false }"
  class="max-w-3xl relative flex flex-col w-full z-20 mx-auto rounded-xl md:rounded-full md:items-center md:justify-between md:flex-row"
>
  <div class="flex flex-row items-center justify-between md:justify-start">
    <a href="/" class="relative z-10 pt-5 py-2 h-full flex items-center justify-center cursor-pointer group overflow-hidden rounded-b-xl">
      <h2 class="text-[1.9rem] font-big-shoulders font-bold m-0 text-base-900 select-none transition-all duration-500 group-hover:-translate-y-full group-hover:opacity-0">
          <span class="font-light">THE</span> DOXSANDOQQUZ 
      </h2>
      <h2 class="absolute text-[3.5rem] font-bold m-0 text-rose-500 select-none font-big-shoulders translate-y-full opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
         99
      </h2>
  </a>
    <button
      @click="open = !open"
      class="inline-flex items-center justify-center p-2 text-base-900 hover:text-blue-500 focus:outline-none focus:text-base-900 md:hidden"
    >
      <svg
        class="w-6 h-6" 
        stroke="currentColor"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          :class="{'hidden': open, 'inline-flex': !open }"
          class="inline-flex"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
        <path
          :class="{'hidden': !open, 'inline-flex': open }"
          class="hidden"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
  <nav
    :class="{'flex': open, 'hidden': !open}"
    class="flex-col justify-center flex-grow hidden py-12 md:py-0 md:flex md:items-end md:flex-row relative top-[4px]"
  >
    <div
      class="items-center justify-center list-none space-y-2 md:space-y-0 md:ml-auto md:inline-flex md:text-left gap-3"
    > 
      {!isLoggedIn ? (
        <div class="relative z-10">
          <a
            href="/signin"
            class="py-1.5 px-2.5 border focus:ring-2 h-7.5 text-sm rounded-full 
            border-transparent bg-base-900 hover:bg-white text-white 
            duration-200 focus:ring-offset-2 focus:ring-white hover:text-base-900 inline-flex 
            items-center justify-center ring-1 ring-transparent"
          >
            Giri≈ü
          </a> 

          <a
            href="/signup"
            class="text-base-900 hover:bg-rose-500 hover:border-rose-500 hover:text-white font-medium text-sm border py-1.5 px-2.5 rounded-full transition-all duration-200"
          >
            Qeydiyyat
          </a>
        </div> 
      ) : (
        <div class="relative z-10 flex items-center gap-3">
           <ProfileDropdown
              client:load
              isStudioRoutePath={isStudioRoutePath} 
              userImage={'https://miro.medium.com/v2/resize:fill:300:300/1*cqroLdqSWbISklp0mVJuvQ@2x.jpeg'} 
              userName={user?.fullName}
            />
        </div> 
      )} 
    </div>
  </nav>
</div> 


