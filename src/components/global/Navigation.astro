---
import ProfileDropdown from "./ProfileDropdown";
import { supabase } from "@/db/supabase";
import { getUserFromCookies } from "@/utils/auth";

const { isLoggedIn, user } = Astro.props;

// Studio veya edit-post sayfalarında kaydet butonunu göster
const isStudioRoutePath = Astro.url.pathname === '/studio' || Astro.url.pathname.includes('/edit-post/');

// Admin və Moderator yoxlaması (role_id əsaslı)
// 1 = Admin, 2 = Moderator, 3 = Editor, 4 = User
let isAdmin = false;
let isModerator = false;
let isEditor = false;
let enableRegistration = true;

if (isLoggedIn && user) {
  // user artıq BaseLayout-dan gəlir, role_id orada olmalıdır
  const roleId = user.role_id;
  console.log("Navigation - user.role_id:", roleId);
  isAdmin = roleId === 1;
  isModerator = roleId === 1 || roleId === 2;
  isEditor = roleId === 1 || roleId === 2 || roleId === 3;
}

console.log('ROLE::>>>', isLoggedIn)

// Settings-dən qeydiyyat aktivliyini al
try {
  const { data: registrationSetting } = await supabase
    .from("settings")
    .select("value")
    .eq("key", "enable_registration")
    .single();
  
  if (registrationSetting) {
    enableRegistration = registrationSetting.value === 'true' || registrationSetting.value === true;
  }
} catch (error) {
  console.error("Registration setting yüklənərkən xəta:", error);
}
---
<div
  x-data="{ open: false }"
  class="max-w-3xl relative flex flex-col w-full z-20 mx-auto rounded-lg sm:rounded-xl md:rounded-full md:items-center md:justify-between md:flex-row px-3 sm:px-0"
>
  <div class="flex flex-row items-center justify-between md:justify-start">
    <a href="/" class="relative z-10 pt-3 sm:py-5 py-0 h-full flex items-center justify-center cursor-pointer group overflow-hidden rounded-b-lg sm:rounded-b-xl">
      <h2 class="text-2xl sm:text-[1.9rem] font-big-shoulders font-bold m-0 text-[var(--text-primary)] select-none transition-all duration-500 group-hover:-translate-y-full group-hover:opacity-0">
          <span class="font-light">THE</span> <span>DOXSANDOQQUZ</span>
      </h2>
      <h2 class="absolute text-3xl sm:text-[3.5rem] font-bold m-0 text-rose-500 select-none font-big-shoulders translate-y-full opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
         99
      </h2>
  </a>
    <button
      @click="open = !open"
      class="inline-flex items-center justify-center p-2 text-(--text-primary) hover:text-blue-500 focus:outline-none focus:text-(--text-primary) md:hidden"
    >
      <svg
        class="w-6 h-6" 
        stroke="currentColor"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          :class="{'hidden': open, 'inline-flex': !open }"
          class="inline-flex"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
        <path
          :class="{'hidden': !open, 'inline-flex': open }"
          class="hidden"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
  <nav
    :class="{'flex': open, 'hidden': !open}"
    class="flex-col justify-center grow hidden py-8 sm:py-12 md:py-0 md:flex md:items-end md:flex-row relative top-[4px]"
  >
    <div
      class="items-center justify-center list-none space-y-2 md:space-y-0 md:ml-auto md:inline-flex md:text-left gap-2 sm:gap-3"
    > 
      <!-- Theme Toggle Button -->
      <button
        id="theme-toggle"
        onclick="window.toggleTheme()"
        class="cursor-pointer p-2 rounded-full hover:bg-(--hover-bg) transition-colors duration-200"
        title="Tema dəyiş"
      >
        <!-- Sun icon (dark mode-da görünür) -->
        <svg class="w-5 h-5 hidden dark:block text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
        </svg>
        <!-- Moon icon (light mode-da görünür) -->
        <svg class="w-5 h-5 block dark:hidden text-(--text-secondary)" fill="currentColor" viewBox="0 0 20 20">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
        </svg>
      </button>

      {!isLoggedIn ? (
        <div class="relative z-10 flex flex-col sm:flex-row gap-2 sm:gap-3 w-full sm:w-auto">
          <a
            href="/signin"
            class="py-1.5 px-2.5 border focus:ring-2 h-7.5 text-xs sm:text-sm rounded-full 
            border-transparent bg-(--text-primary) hover:bg-(--bg-primary) text-(--bg-primary) 
            duration-200 focus:ring-offset-2 focus:ring-white hover:text-(--text-primary) inline-flex 
            items-center justify-center ring-1 ring-transparent"
          >
            Giriş
          </a> 

          {enableRegistration && (
            <a
              href="/signup"
              class="text-(--text-primary) hover:bg-rose-500 hover:border-rose-500 hover:text-white font-medium text-xs sm:text-sm border border-(--border-color) py-1.5 px-2.5 rounded-full transition-all duration-200"
            >
              Qeydiyyat
            </a>
          )}
        </div> 
      ) : (
        <div class="relative z-10 flex items-center gap-2 sm:gap-3">
          {(isAdmin || isModerator) && (
            <a
              href="/admin"
              class="flex items-center gap-1 sm:gap-2 px-2 sm:px-3 py-1.5 text-[11px] sm:text-xs font-medium text-(--text-primary) bg-(--bg-secondary) hover:bg-(--hover-bg) rounded-full transition-colors"
              title={isAdmin ? "Admin Panel" : "Moderator Panel"}
            >
              <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              {isAdmin ? 'Admin' : isModerator ? 'Moderator' : 'Panel'}
            </a>
          )}
           <ProfileDropdown
              client:only="react"
              isStudioRoutePath={isStudioRoutePath} 
              userImage={user?.avatar} 
              userName={user?.fullname}
              userUsername={user?.username}
              canWrite={isEditor}
            />
        </div> 
      )} 
    </div>
  </nav>
</div> 


